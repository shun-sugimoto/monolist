<% content_for :head do%>
  <title><%= @item.title %>-monolist</title>
  <meta name="description" content=" 「<%=  @item.title %> 」に関する情報です。この商品を欲しい人、持ってる人を表示しています。">
<% end %>

<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
            <% if @item.large_image.blank? %>
              <%= image_tag("no-image.png" , alt: @item.title) %>
            <% else %>
              <%= image_tag(@item.large_image , alt: @item.title)%>
            <% end %>
        </div>
      </div>
      <div class="title">
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー(<%= @item.want_users.count %>)</h4>
        <div class="side-box-body">
          <% @item.want_users.each do |user| %>
              <a href = '/users/<%= user.id %>'>
                <%= gravatar_for user, size: 100 %>
              </a>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー(<%= @item.have_users.count %>)</h4>
        <div class="side-box-body">
          <% @item.have_users.each do |user| %>
              <a href = '/users/<%= user.id %>'>
                <%= gravatar_for user, size: 100 %>
              </a>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <%= link_to(image_tag("amazon-button.png", {alt: "Amazon詳細ページへ"}), @item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>
